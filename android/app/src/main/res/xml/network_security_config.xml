<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow HTTP traffic for local development -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        
        <!-- Allow HTTP traffic for local network development -->
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <domain includeSubdomains="true">192.168.0.0/24</domain>
        
        <!-- Allow HTTP traffic for development server -->
        <domain includeSubdomains="true">kms.local</domain>
        <domain includeSubdomains="true">api.local</domain>
    </domain-config>
    
    <!-- Default configuration for production - HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust the system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
